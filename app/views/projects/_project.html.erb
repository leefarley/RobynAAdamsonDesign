<div class="content">
		<div id="projectimageviewer"> 
			<div id="myGallery">
			<li><%= image_tag "placeholder-image.png" %></li>
			<li><%= image_tag "placeholder-image2.png" %></li>
			<li><%= image_tag "placeholder-image3.png" %></li>
			<li><%= image_tag "placeholder-image4.png" %></li>
			</div>
		</div>
		<div id="projectinfopane">
			<div id="tabs">
				<div class="tab" >brief</div>
					<div class="tab centertab">Solution</div>
					<div class="tab" id="selected">Outcome</div>
			</div>
			<div id="projectinfo">
				<div id="projecttitle">
					<b><%= @project.title %></b>
				</div>
				<div id="projectclient">
					Client: <%= @project.client %>
				</div>
				<div id="projectyear">
					<%= @project.date_added %>
				</div>
				<hr id="projectinforule">
				<div class="projectcontent">
				 	<%= @project.brief %>
				</div>
				<div class="projectcontent">
				 	<%= @project.solution %>
				</div>
				<div class="projectcontent">
				 	<%= @project.outcome %>
				</div>
			</div>
		</div>
</div>
<div class="clear" ></div>


<script>
	$('#projectimageviewer').galleryView({
    transition_speed: 600,
    show_filmstrip: false,
    panel_animation: 'slide',
    show_infobar: false,
    panel_height: 445,
    panel_width: 720,
    frame_gap:0
	});
</script>

