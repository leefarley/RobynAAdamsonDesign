<hr id="projectrule" />
<div id="projectlist">
	<% @projects.each do |project| %>
		<%= link_to (image_tag project.thumbnail.url), project_path(project.id), :remote => true %>
	<% end %>
</div>
<script>

	$(".brief").live('click', function() {
		$(".tab").removeClass('selected');
		$(this).addClass('selected');
		$('#brief').show();
		$('#solution').hide();
		$('#outcome').hide();
	});

	$(".solution").live('click',function() {
		$(".tab").removeClass('selected');
		$(this).addClass('selected');
		$('#brief').hide();
		$('#solution').show();
		$('#outcome').hide();
	});
	$(".outcome").live('click',function() {
		$(".tab").removeClass('selected');
		$(this).addClass('selected');
		$('#brief').hide();
		$('#solution').hide();
		$('#outcome').show();
	});
</script>