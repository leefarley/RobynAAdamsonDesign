<hr id="projectruletop" />
<div id="projectlist">
	<% if @projects != nil %>
	<% @projects.each_with_index do |project, i| %>
		<% if (i % 10 != 0) %>
			<div class="projectspacer"></div>
		<% end %>
		<div class="projectItem">
			<%= link_to (image_tag project.thumbnail.url), project_path(project.id), :remote => true %>
		</div>
	<% end %>
	<% end %>
</div>
<div class="clear" ></div>
<script type="text/javascript">
	$(".brief").live('click', function() {
		$(".tab").removeClass('selected');
		$(this).addClass('selected');
		$('#brief').show();
		$('#solution').hide();
		$('#outcome').hide();
	});

	$(".solution").live('click',function() {
		$(".tab").removeClass('selected');
		$(this).addClass('selected');
		$('#brief').hide();
		$('#solution').show();
		$('#outcome').hide();
	});
	$(".outcome").live('click',function() {
		$(".tab").removeClass('selected');
		$(this).addClass('selected');
		$('#brief').hide();
		$('#solution').hide();
		$('#outcome').show();
	});
</script>